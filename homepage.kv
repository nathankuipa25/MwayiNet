<Trending@MDCard>:
	elevation: 0.01
	radius: [5]
	size_hint: .60,None
	height: dp(90)
	pos_hint: {'center_x':.5}
	#adaptive_height: True
	

<CategoryCard>:
	radius: [16]
	md_bg_color: 1,1,1,1
	
	
	
<BadgeIconButton>:
	size_hint: None,None
	size: dp(70),dp(70)
	radius: self.size[0]/2
	shadow_radius: self.radius[0]
	
	MDIcon:
		icon: root.icon
		badge_icon: root.badge_icon
		size: root.size
		pos_hint: {'center_x':.5,'center_y':.5}
		pos: root.pos
		font_size: root.size[0]*.58
		
<ProfileButton>:
	#md_bg_color: 'red'
	size_hint: None,None
	size: dp(60),dp(60)
	radius: self.size[0]/2
	shadow_radius: self.radius[0]
	on_release: pass
	
	FitImage:
		source: root.profile_img
		size_hint: None,None
		size: root.size
		pos_hint: {'center_y':.5,'center_x':.5}
		radius: self.size[0]/2
		font_size: root.size[0]*.6
		pos: root.pos
		

MDScreen:
	name: 'homepage'
	
	MDBoxLayout:
		spacing: dp(5)
		md_bg_color: 1,0,0,0.01
		
		orientation: 'vertical'
		
		MDFloatLayout:
			size_hint: 1,.12
			#md_bg_color: 1,0,0,0.5
			MDIconButton:
				icon: 'menu'
				user_font_size: sp(30)
				icon_size: sp(30)
				pos_hint: {'center_y':.5}
			BadgeIconButton:
				pos_hint: {'center_y':.50,'center_x':.7}
			ProfileButton:
				pos_hint: {'center_y':.5,'center_x':.9}
				elevation: 1
		SearchBar:
			md_bg_color: 1,1,1,1
			elevation: 1
			size_hint: .89,.09
			radius: [16]
			pos_hint: {'center_x':.5}
			
			MDIconButton:
				icon: 'magnify'
				pos_hint: {'center_y':.5,'center_x':.09}
			TextInput:
				id: searchbox
				hint_text: 'search intakes,vacancies....'
				pos_hint: {'center_y':.5,'center_x':.54}
