<TrendingIntakeCard@MDCard>:
    size_hint: .9, None
    height: dp(120)
    radius: [16]
    elevation: 0.5
    padding: dp(10)
    md_bg_color: 1, 1, 1, 1
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: dp(10)

        MDIcon:
            icon: 'school-outline'
            size_hint: None, None
            size: dp(50), dp(50)
            theme_text_color: 'Custom'
            text_color: 0, 0.5, 0.8, 1
            pos_hint: {'center_y': .5}

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(4)

            MDLabel:
                text: "DMI - St.John the Babtist"
                font_name: 'fonts/Bpoppins.ttf'
                font_size: sp(16)
                bold: True
                theme_text_color: "Primary"

            MDLabel:
                text: "Undergraduate"
                font_name: 'fonts/MPoppins.ttf'
                font_size: sp(14)
                theme_text_color: "Secondary"

    MDRaisedButton:
        text: "View Details"
        pos_hint: {'right': 1}
        size_hint: None, None
        size: dp(110), dp(30)
        md_bg_color: 0, 0.5, 0.8, 1
        text_color: 1, 1, 1, 1
        font_name: 'fonts/MPoppins.ttf'
        font_size: sp(13)
        
